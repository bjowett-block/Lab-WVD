{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "hubRsvName": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "hubLawName":{
            "type":"string"
        },
        "hubDsaId":{
            "type":"string"
        },
        "hubLawId":{
            "Type":"string"
        },

        "tagSalesOrderId":{
            "type": "string"
  
        },
        "tagCostCentreId": {
            "type": "string"
        }

    },
    "resources": [
        {
            "apiVersion": "2016-06-01",
            "name": "[parameters('hubRsvName')]",
            "location": "[parameters('location')]",
            "tags": {
              "Owner": "Block Solutions",
              "Department": "Workspace and Cloud",
              "Environment": "Production",
              "Location": "[parameters('location')]",
              "CostCentre": "[parameters('tagCostCentreId')]",
              "SalesOrderId" : "[parameters('tagSalesOrderId')]"
            },
            
            "type": "Microsoft.RecoveryServices/vaults",
            "sku": {
                "name": "RS0",
                "tier": "Standard"
            },
            "properties": {}
        },
{
      "type": "Microsoft.RecoveryServices/vaults/providers/diagnosticSettings",
      "dependsOn": [
          "[resourceId('Microsoft.RecoveryServices/vaults/',parameters('hubRsvName'))]"
      ],
      "name": "[concat(parameters('hubRsvName'), '/microsoft.insights/', parameters ('hubLawName'))]",
      "apiVersion": "2017-05-01-preview",
      "properties": {
        "name": "[parameters('hubLawName')]",
        "storageAccountId": "[parameters('hubDsaId')]",
        "workspaceId": "[parameters('hubLawId')]",
        "logs": [
          {
            "category": "AzureBackupReport",
            "enabled": true,
            "retentionPolicy": {
              "days": 365,
              "enabled": false
            }
          }
        ],
        "metrics": []
      }
     
    }




        
    ]
}