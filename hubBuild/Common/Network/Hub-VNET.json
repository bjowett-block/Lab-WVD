{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
  "parameters": {
    
    "hubVnetName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "hubIpPrefix": {
      "type": "string"
    },
    "hubSharedServicesSubnetRange": {
      "type": "string"
    },
    "hubDomainServicesSubnetRange": {
      "type": "string"
    },
 
    "hubGatewayServicesSubnetRange": {
      "type": "string"
    },
    "hubDmzSubnetRange": {
      "type": "string"
    },
    "hubAzureFirewallSubnetRange": {
      "type": "string"
    },
    "hubDc01VmIp": {
      "type": "string"
    },
    "hubDc02VmIp": {
      "type": "string"
    },
    "tagSalesOrderId":{
      "type": "string"
  
    },
    "tagCostCentreId": {
      "type": "string"
    }
    


  },
  "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-04-01",
            "name": "[parameters('hubVnetName')]",
            "location": "[parameters('location')]",
            "tags": {
                "Owner": "Block Solutions",
              "Department": "Workspace and Cloud",
              "Environment": "Production",
              "Location": "[parameters('location')]",
              "CostCentre": "[parameters('tagCostCentreId')]",
              "SalesOrderId" : "[parameters('tagSalesOrderId')]"
            },
          "properties": {
            "addressSpace": {
              "addressPrefixes": [
                "[parameters('hubIpPrefix')]"
              ]
            },
            "dhcpOptions": {
              "dnsServers": [
                "[parameters('hubDc01VmIp')]",
                "[parameters('hubDc02VmIp')]"
              ]
            },
            "subnets": [
              {
                "name": "DomainServices",
                "properties": {
                  "addressPrefix": "[parameters('hubDomainServicesSubnetRange')]",
                  "delegations": [],
                  "privateEndpointNetworkPolicies": "Enabled",
                  "privateLinkServiceNetworkPolicies": "Enabled"
                }
              },

              {
                "name": "GatewayServices",
                "properties": {
                  "addressPrefix": "[parameters('hubGatewayServicesSubnetRange')]",
                  "delegations": [],
                  "privateEndpointNetworkPolicies": "Enabled",
                  "privateLinkServiceNetworkPolicies": "Enabled"
                }
              },
              {
                "name": "DMZ",
                "properties": {
                  "addressPrefix": "[parameters('hubDmzSubnetRange')]",
                  "delegations": [],
                  "privateEndpointNetworkPolicies": "Enabled",
                  "privateLinkServiceNetworkPolicies": "Enabled"
                }
              },
              {
                "name": "AzureFirewallSubnet",
                "properties": {
                  "addressPrefix": "[parameters('hubAzureFirewallSubnetRange')]",
                  "delegations": [],
                  "privateEndpointNetworkPolicies": "Enabled",
                  "privateLinkServiceNetworkPolicies": "Enabled"
                }
              },
              {
                "name": "SharedServices",
                "properties": {
                  "addressPrefix": "[parameters('hubSharedServicesSubnetRange')]",
                  "serviceEndpoints": [
                    {
                      "service": "Microsoft.KeyVault",
                      "locations": [
                        "*"
                      ]
                    },
                    {
                      "service": "Microsoft.Storage",
                      "locations": [
                        "westeurope",
                        "northeurope",
                        "uksouth",
                        "ukwest"
                      ]
                    }
                  ],
                  "delegations": [],
                  "privateEndpointNetworkPolicies": "Enabled",
                  "privateLinkServiceNetworkPolicies": "Enabled"
                }
              }
            ],
            "virtualNetworkPeerings": [],
            "enableDdosProtection": false,
            "enableVmProtection": false
          }
        },
      {
        "type": "Microsoft.Network/virtualNetworks/subnets",
        "apiVersion": "2019-04-01",
        "name": "[concat(parameters('hubVnetName'),'/AzureFirewallSubnet')]",
        "dependsOn": [
          "[resourceId('Microsoft.Network/virtualNetworks',parameters('hubVnetName'))]"
        ],
        "properties": {
          "addressPrefix": "[parameters('hubAzureFirewallSubnetRange')]",
          "delegations": [],
          "privateEndpointNetworkPolicies": "Enabled",
          "privateLinkServiceNetworkPolicies": "Enabled"
        }
      },
      {
        "type": "Microsoft.Network/virtualNetworks/subnets",
        "apiVersion": "2019-04-01",
        "name": "[concat(parameters('hubVnetName'),'/DMZ')]",
        "dependsOn": [
          "[resourceId('Microsoft.Network/virtualNetworks',parameters('hubVnetName'))]"
        ],
        "properties": {
          "addressPrefix": "[parameters('hubDmzSubnetRange')]",
          "delegations": [],
          "privateEndpointNetworkPolicies": "Enabled",
          "privateLinkServiceNetworkPolicies": "Enabled"
        }
      },
      {
        "type": "Microsoft.Network/virtualNetworks/subnets",
        "apiVersion": "2019-04-01",
        "name": "[concat(parameters('hubVnetName'),'/DomainServices')]",
        "dependsOn": [
          "[resourceId('Microsoft.Network/virtualNetworks',parameters('hubVnetName'))]"
        ],
        "properties": {
          "addressPrefix": "[parameters('hubDomainServicesSubnetRange')]",
          "delegations": [],
          "privateEndpointNetworkPolicies": "Enabled",
          "privateLinkServiceNetworkPolicies": "Enabled"
        }
      },
      {
        "type": "Microsoft.Network/virtualNetworks/subnets",
        "apiVersion": "2019-04-01",
        "name": "[concat(parameters('hubVnetName'),'/GatewayServices')]",
        "dependsOn": [
          "[resourceId('Microsoft.Network/virtualNetworks',parameters('hubVnetName'))]"
        ],
        "properties": {
          "addressPrefix": "[parameters('hubGatewayServicesSubnetRange')]",
          "delegations": [],
          "privateEndpointNetworkPolicies": "Enabled",
          "privateLinkServiceNetworkPolicies": "Enabled"
        }
      },
      {
        "type": "Microsoft.Network/virtualNetworks/subnets",
        "apiVersion": "2019-04-01",
        "name": "[concat(parameters('hubVnetName'),'/SharedServices')]",
        "dependsOn": [
          "[resourceId('Microsoft.Network/virtualNetworks',parameters('hubVnetName'))]"
        ],
        "properties": {
          "addressPrefix": "[parameters('hubSharedServicesSubnetRange')]",
          "serviceEndpoints": [
            {
              "service": "Microsoft.KeyVault",
              "locations": [
                "*"
              ]
            },
            {
              "service": "Microsoft.Storage",
              "locations": [
                "westeurope",
                "northeurope",
                "uksouth",
                "ukwest"
              ]
            }
          ],
          "delegations": [],
          "privateEndpointNetworkPolicies": "Enabled",
          "privateLinkServiceNetworkPolicies": "Enabled"
        }
      }
    ]
}