{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "hubFirewallPipName": {
      "type": "string"
    },
    "hubVng01PipName": {
      "type": "string"
    },
    "hubVng02PipName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "tagCostCentreId":{
            "type": "string"
        },
    "tagSalesOrderId":{
            "type": "string"
        }
  },
  "variables":{},
  "resources": [
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2019-08-01",
      "name": "[parameters('hubFirewallPipName')]",
      "location": "[parameters('location')]",
      "tags": {
                "Owner": "Block Solutions",
                "Department": "Workspace and Cloud",
                "Environment": "Production",
                "Location": "[parameters('location')]",
                "CostCentre": "[parameters('tagCostcentreId')]",
                "SalesOrderID": "[parameters('tagSalesOrderId')]"
      },
      "sku": {
        "name": "Standard"
      },
      "properties": {
        "publicIPAddressVersion": "IPv4",
        "publicIPAllocationMethod": "Static",
        "idleTimeoutInMinutes": 4,
        "ipTags": []
      }
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2019-08-01",
      "name": "[parameters('hubVng01PipName')]",
      "location": "[parameters('location')]",
     "tags": {
                "Owner": "Block Solutions",
                "Department": "Workspace and Cloud",
                "Environment": "Production",
                "Location": "[parameters('location')]",
                "CostCentre": "[parameters('tagCostcentreId')]",
                "SalesOrderID": "[parameters('tagSalesOrderId')]"
      },
      "sku": {
        "name": "Standard"
      },
      "properties": {
        "publicIPAddressVersion": "IPv4",
        "publicIPAllocationMethod": "Static",
        "idleTimeoutInMinutes": 4,
        "ipTags": []
      }
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2019-08-01",
      "name": "[parameters('hubVng02PipName')]",
      "location": "[parameters('location')]",
     "tags": {
                "Owner": "Block Solutions",
                "Department": "Workspace and Cloud",
                "Environment": "Production",
                "Location": "[parameters('location')]",
                "CostCentre": "[parameters('tagCostcentreId')]",
                "SalesOrderID": "[parameters('tagSalesOrderId')]"
      },
      "sku": {
        "name": "Standard"
      },
      "properties": {
        "publicIPAddressVersion": "IPv4",
        "publicIPAllocationMethod": "Static",
        "idleTimeoutInMinutes": 4,
        "ipTags": []
      }
    }

  ],
  "outputs": {}
}