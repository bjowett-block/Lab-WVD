{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    
    
    
  "hubUksDc01ServerName": {
  "type": "string"
    },

  "hubUksDc01ServerNicName": {
  "type":"string"
    },
  "location": {
      "type": "string"
    },
  "WindowsDefaultPassword": {
      "type": "securestring"
    },
  "hubAvs01Name":{
    "type": "string"  
  },
  "tagSalesOrderId":{
      "type": "string"
  
        },
  "tagCostCentreId": {
      "type": "string"
        }


  },
  "variables": {
   
  },
  "resources": [
    
    
    
   
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2020-06-01",
      "name": "[parameters('hubUksDc01ServerName')]",
      "location": "[parameters('location')]",
      "tags": {
              "Owner": "Block Solutions",
              "Department": "Workspace and Cloud",
              "Environment": "Production",
              "Location": "[parameters('location')]",
              "CostCentre": "[parameters('tagCostCentreId')]",
              "SalesOrderId" : "[parameters('tagSalesOrderId')]"
            },
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_B2s"
        },
        "osProfile": {
          "computerName": "[parameters('hubUksDc01ServerName')]",
          "adminUsername": "azureadmin",
          "adminPassword": "[parameters('WindowsDefaultPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2019-Datacenter",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "StandardSSD_LRS"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('hubUksDc01ServerNicName'))]"
            }
          ]
        },
        "availabilitySet":{
          "id": "[resourceId('Microsoft.compute/availbilitySets',parameters('hubAvs01Name'))]"
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": false
          }
        }
      }
    }
  ],
  "outputs": {
    
  }
}